<%- include('header') %>

<h1><%= title %></h1>

<form method="POST">
  <div class="form-group">
    <label for="name">Genre:</label>
    <input
      type="text"
      id="name"
      name="name"
      class="form-control"
      placeholder="Fantasy, Poetry etc."
      value="<%= locals.genre===undefined ? '' : genre.name%>"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% if (locals.errors) { %>
<ul>
  <% errors.forEach(error => { %>
  <li><%- error.msg %></li>
  <% }) %>
</ul>

<% } %> <%- include('footer') %>
