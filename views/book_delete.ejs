<%- include('header') %>

<h1><%= title %>: <%= book.title %></h1>

<% if (bookinstances.length) { %>
<p>
  <strong>Delete the following copies before attempting to delete this book: </strong>
  <div style="margin-left: 20px; margin-top: 20px;">
    <h4>Copies:</h4>
    <dl>
        <% bookinstances.forEach((bookinstance) => { %>
            <dt>
                <a href="<%= bookinstance.url %>"><%= bookinstance.imprint %></a>
            </dt>
            <hr>
        <% }) %>
    </dl>
  </div>
</p>
<% } else { %>
 <p>Do you really want to delete this book?</p>

 <form method="POST">
    <div class="form-group">
        <input type="hidden" id="bookid" name="bookid" value="<%= book._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
 </form>
<% } %> 
<%- include('footer') %>
